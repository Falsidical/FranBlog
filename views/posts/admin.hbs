<div class='container'>
  <h2 class='posts-title'>Manage Posts</h2>

  <table>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Author</th>
      <th>Hidden?</th>
      <th>Actions</th>
    </tr>
    {{#each posts}}
      <tr>
        <td>{{this._id}}</td>
        <td>{{this.title}}</td>
        <td>{{this.author}}</td>
        <td>{{this.hidden}}</td>
        <td class='flex'>
          <a href='/posts/edit/{{this._id}}' class='btn primary'>Edit Post</a>
          <form action='/posts/{{this._id}}?_method=DELETE' method='post'>
            <button type='submit' class='btn danger'>Delete</button>
          </form>
        </td>
      </tr>
    {{/each}}
  </table>
</div>