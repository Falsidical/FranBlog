<div class='container'>
  <h1 class="post-title">Search</h1>
  {{>search}}
  <h1 class='posts-title'>All posts</h1>
  {{#each posts}}
    <div class='allposts-post'>
      <h2>{{this.title}} </h2>
      <p><em>Posted by {{this.author}} on {{formatDateShort this.date}}</em></p>
      <a href='/posts/{{this.linkTitle}}' class='read-more'>Read post...</a>
    </div>
  {{/each}}
</div>