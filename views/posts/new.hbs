<div class='container'>
  <h1 class='posts-title'>Create New Post</h1>
  <form action='/posts' method='post' class='new-post'>

    <label for='title'>Post Title:</label>
    <input type='text' name='title' id='title' placeholder='Enter the post title here' required />
    <label for='body'>Post Content:</label>
    {{>editTools}}
    <textarea name='body' id='body' cols='50' rows='10' placeholder='Write here...' required></textarea>
    <label for='showPost'>Publish inmediatly?</label>
    <input type='checkbox' name='showPost' id='showPost' />
    <div class='form-input'>
      <button type='submit' class='btn'>Create Post</button>
      <a href='/posts' class='btn'>Cancel</a>
    </div>
  </form>
</div>

<script src='/js/editTools.js'></script>